<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Weather" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>


    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/playstore_icon</item>
        <item name="windowSplashScreenAnimationDuration">600</item>
        <item name="postSplashScreenTheme">@style/Theme.Weather</item>
    </style>
</resources>